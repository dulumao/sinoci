{
  "name": "sinoci/sinoci",
  "description": "Simple yet powerful framework for building modern web sites.",
  "version": "0.1.0",
  "homepage": "https://github.com/sinoci/sinoci",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/sinoci/sinoci/issues",
    "wiki": "https://github.com/sinoci/sinoci/wiki"
  },
  "require": {
    "php": ">=5.4.0",
    "codeigniter/framework": "3.1.*",
    "illuminate/database": "5.0.*",
    "leafo/scssphp": "0.6.*",
    "psy/psysh": "0.7.*",
    "sami/sami": "3.3.*",
    "symfony/var-dumper": "2.8.*"
  },
  "autoload": {
    "files": [
      "resources/helpers/functions.php"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://packagist.phpcomposer.com"
    }
  },
  "config": {
    "process-timeout": 0
  },
  "scripts": {
    "docs": [
      "php vendor/bin/sami.php update --force scripts/docs.php",
      "php -S localhost:9000 -t docs/api"
    ],
    "fly": "vendor/bin/psysh",
    "preview": "php -S 0.0.0.0:9000 -t public scripts/serve.php",
    "serve": "php -S localhost:9000 -t public scripts/serve.php"
  }
}
